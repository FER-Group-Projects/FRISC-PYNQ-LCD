BUFFER_ZNAK ;učitava znak iz memorije u buffer
	;TODO: prvo zrcali oko x-osi i/ili oko y-osi ako mora
	;TODO: poziva se nakon promjene relevantnih parametara
				RET
;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
UPDATE_ZNAK ;šalje parametre za ispis znaka i poziva ispis znaka
	;TODO: zove se nakon promjene bilo kojeg parametra
				RET
;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
				; Prima stogom sljedeće parametre:
				; 1. Pozicija X 					
				; 2. Pozicija Y 					
				; 3. Orijentacija (0 ili 1) 		
				; 4. Boja znaka 					
				; 5. Boja pozadine znaka			
				; 6. Kod znaka	 					
ISPISI_ZNAK		PUSH R0
				PUSH R1
				PUSH R2
				PUSH R3
				PUSH R4
				PUSH R5
				PUSH R6

				LOAD R1, (POZICIJA_X)
				LOAD R2, (POZICIJA_Y)

				MOVE BUFFER, R6
				MOVE 8, R3 					;vanjski brojač

LP_REDAK_ZK		LOADB R5, (R6)
				SHL R5, 18, R5 				; Pomak za 24 mjesta

				MOVE 8, R4					; Unutarnji brojač

LP_STUPAC_ZK	SHL R5, 1, R5

				JR_NC BIT_POZADINA

BIT_ZNAK		LOAD R0, (BOJA_ZNK_PNT)
				JR ZNK_PNT_AREA

BIT_POZADINA	LOAD R0, (BOJA_BG_PNT)
				
ZNK_PNT_AREA	LOAD R0, (R0+BOJE)

				PUSH R0
				PUSH R1

				LOAD R0, (SCALE)
				ADD R1, R0, R0
				PUSH R0

				PUSH R2

				LOAD R0, (SCALE)
				ADD R2, R0, R0
				PUSH R0

				CALL PAINT_AREA
				ADD SP, 14, SP

				LOAD R0, (SCALE)
				ADD R1, R0, R1

				SUB R4, 1, R4
				JR_NZ LP_STUPAC_ZK

				LOAD R1, (POZICIJA_X)
				LOAD R0, (SCALE)
				ADD R2, R0, R2
				ADD R6, 1, R6

				SUB R3, 1, R3
				JR_NZ LP_REDAK_ZK

				POP R6
				POP R5
				POP R4
				POP R3
				POP R2
				POP R1
				POP R0
				RET
;------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
POZICIJA_X		DW 0			; Pixeli - apsolutne koordinate
POZICIJA_Y		DW 0			; Pixeli

REDAK			DW 0 ;trenutni redak
STUPAC			DW 0 ;trenutni stupac

				;TODO: ako ih nećemo preračunavati, može EQU
MAXRED			DW %D 40
MAXSTUP			DW %D 30
MAXSCALE		EQU %D 31

ORIJENTACIJA_X 	DW 0 			;zrcaljenje gore-dolje
ORIJENTACIJA_Y 	DW 0			;zrcaljenje lijevo-desno
SCALE			DW 1			; Koliko pixela je velik jedan bit

BILO_PROMJENE	DW 0			;Znak se ne upisuje ako nije bilo promjene
		;TODO: kasnije možda možemo pamtiti u memoriji 16 bita za svaki pixel, pozicija 8, 4 boja znaka i 4 boja pozadine
		;ako je zastavica BILO_PROMJENE u 0 onda vratimo vrijednost iz memorije u lcd

ZNAK_PNT		DW 0			; Pozicija znaka u ZNAKOVI
BOJA_BG_PNT		DW 8			; Pozicija boje pozadine
BOJA_ZNK_PNT	DW 10			; Pozicija boje znakova

BUFFER			DB %B 00000000, %B 00111100, %B 01100110, %B 01100110, %B 01111110, %B 01100110, %B 01100110, %B 01100110 ;a

UKUPNO_BOJA 	DW %D 5
				;65K color: 16-bit/pixel (RGB 5-6-5 bits input) 
BOJE 			DW 0FFFF ; bijela
